        <script src="{{asset('js/highcharts.js')}}"></script> <script src="{{asset('js/exporting.js')}}"></script>
    {% endblock %}

{% block content %}

    {{ render(controller('MyAppFourumBundle:Default:chartLine')) }}

    <div class="row">
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-money fa-fw"></i>Liste des categories</h3>
                </div>

                <div class="panel-body">

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <th>id</th>
                                <th>titre</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for forumCategorie in forumCategories %}

                                <tr>

                                    <td><a href="{{ path('forumcategorie_show', { 'id': forumCategorie.idCategorie }) }}">{{ forumCategorie.idCategorie }}</a></td>
                                    <td>{{ forumCategorie.titre }}</td>
                                    <td>

                                                <a type="submit" class="btn btn-xs btn-danger" href="{{ path('forumcategorie_delete', { 'id': forumCategorie.idCategorie }) }}">supprimer</a><br>

                                                <a  type="submit" class="btn btn-xs btn-success" href="{{ path('forumcategorie_show', { 'id': forumCategorie.idCategorie }) }}">afficher</a>

                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div><div class="text-right">
                        <a href="{{ path('forumcategorie_index') }}">Tous les categorie<i class="fa fa-arrow-circle-right"></i></a>
                    </div> </div></div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> List des Sous Categories </h3>
                </div>
                <div class="panel-body">

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <th>id</th>
                                <th>titre</th>
                                <th>Categorie</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for forumSousCategorie in forumSousCategories %}
                                <tr>
                                    <td><a href="{{ path('forumsouscategorie_show', { 'id': forumSousCategorie.idSousCategorie }) }}">{{ forumSousCategorie.idSousCategorie }}</a></td>
                                    <td>{{ forumSousCategorie.titre }}</td>
                                    <td>{{ forumSousCategorie.idCategorie }}</td>
                                    <td>

                                                <a  type="submit" class="btn btn-xs btn-success" href="{{ path('forumsouscategorie_show', { 'id': forumSousCategorie.idSousCategorie }) }}">afficher</a><br>

                                                <a type="submit" class="btn btn-xs btn-danger" href="{{ path('forumcategorie_delete', { 'id': forumSousCategorie.idSousCategorie }) }}">supprimer</a>

                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>

                        </table>
                    </div><div class="text-right">
                        <a href="{{ path('forumsouscategorie_index') }}">tous les Sous categorie<i class="fa fa-arrow-circle-right"></i></a>
                    </div> </div></div></div>

        <div class="col-lg-8">
            <div class="panel panel-default">    <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> List des sujets </h3>
                </div>

                <div class="panel-body">

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>titre</th>
                                <th>Categorie</th>
                                <th>Sous Categorie</th>
                                <th>createur</th>
                                <th>Date de creation</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for forumTopic in forumTopics %}
                                <tr>
                                    <td><a href="{{ path('forumtopics_show', { 'id': forumTopic.idTopics }) }}">{{ forumTopic.idTopics }}</a></td>
                                    <td>{{ forumTopic.sujet }}</td>
                                    <td>{{ forumTopic.idSousCategorie.idCategorie }}</td>
                                    <td>{{ forumTopic.idSousCategorie}}</td>
                                    <td>{{ forumTopic.idCreateur }}</td>

                                    <td>{% if forumTopic.dateHeureCreation %}{{ forumTopic.dateHeureCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>
                                                <a  type="submit" class="btn btn-xs btn-success"  href="{{ path('forumtopics_show', { 'id': forumTopic.idTopics }) }}">afficher</a>

                                                <a  type="submit" class="btn btn-xs btn-danger" href="{{ path('forumtopics_edit', { 'id': forumTopic.idTopics }) }}">supprimer</a>
                                    </td>
                                </tr>

                            {% endfor %}
                            </tbody>

                        </table> </div><div class="text-right">
                        <a href="{{ path('forumtopics_index') }}">tou les sujets<i class="fa fa-arrow-circle-right"></i></a>
                    </div> </div>
                    </div> </div></div></div></div>
{% endblock %}

