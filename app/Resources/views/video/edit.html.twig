{% extends "MyAppPIBundle:admin/layout:layout.html.twig" %}

{% block content %}

    <div class="col-lg-12">
        <h1 class="page-header">
            Video edit
        </h1>

    </div>


    {{ form_start(edit_form) }}

    <div class="panel-body">

        <table class="table table-bordered table-hover table-striped">

            <tr>
                <td width="20%">Titre de la video  :</td>
                <td>{{ form_widget(edit_form.titre) }}</td></tr>
            <tr>
                <td width="20%">Type :</td>
                <td>{{ form_widget(edit_form.typeVideo) }}</td>
            </tr>
            <tr>
                <td width="20%">Date  :</td>
                <td>{{ form_widget(edit_form.dateAjout) }}</td>
            </tr>

            <tr>
                <td width="20%">Code :</td>
                <td height="-5%" e>{{ form_widget(edit_form.codeVideo) }}</td>
            </tr>
            <tr>
                <td width="20%">Description :</td>
                <td>{{ form_widget(edit_form.description) }}</td>
            </tr>
        </table>
        <ul>
            <button type="submit" class="btn btn-default">           Modifier         </button>

        </ul>

        {{ form_end(edit_form) }}
        <ul>

            {{ form_start(delete_form) }}
            <button type="submit" class="btn btn-default">          Supprimer la video        </button>
            {{ form_end(delete_form) }}


        </ul>


                <div class="text-right">
                    <a href="{{ path('video_index') }}">Retour <i class="fa fa-arrow-circle-right"></i></a>
                </div>




    </div>
{% endblock %}
