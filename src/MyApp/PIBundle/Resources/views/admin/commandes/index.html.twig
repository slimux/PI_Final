{% extends "@FOSUser/admin/modelUsed/commandes.html.twig" %}

{% block content %}
    <h1>Commandes list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Référence</th>
                <th>Client</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.date|date('d-m-Y h:i:s') }}</td>
                <td>{{ commande.reference }}</td>
                <td>{{ commande.utilisateur.username }}</td>
                <td>{{ commande.commande.prixTTC }} €</td>
                <td><a href="{{ path('adminShowFacture', { 'id' : commande.id }) }} " target="_blank"><i class="btn btn-default">Show</i></a></td>

                {#<td><a href="{{ path('adminShowFacture', { 'id' : commande.id }) }}" target="_blank"><i class="icon-file"></i></a></td>#}

            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
