{% extends "@FOSUser/admin/modelUsed/produits.html.twig" %}

{% block content %}
<div class="row">
    <div class="col-lg-6">
        <h2>Produit</h2>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{% if produit.disponible %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Note Presse</th>
                <td>{{ produit.notePresse }}</td>
            </tr>
            <tr>
                <th>Note Globale</th>
                <td>{{ produit.noteGlobale }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ produit.video }}</td>
            </tr>
        </tbody>
            </table>
        </div>
    </div>
    <div class="col-lg-6">
        <h2>Actions</h2><br>
    <ul>
        <li>
            <a class="btn btn-default"  href="{{ path('admin_produits_index') }}">Back to the list</a>
        </li><br>
        <li>
            <a class="btn btn-default"  href="{{ path('admin_produits_edit', { 'id': produit.id }) }}">Edit</a>
        </li><br>
        <li>
            {{ form_start(delete_form) }}
            <button type="submit" class="btn btn-default">Delete</button>
            {{ form_end(delete_form) }}
        </li>
    </ul>
    </div>
</div>
{% endblock %}
