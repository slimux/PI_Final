{% extends "@FOSUser/admin/modelUsed/serveur.html.twig" %}

{% block content %}
<div class="row">
    <div class="col-lg-6">
        <h2>Serveur</h2>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <tbody>
                    <tr>
                        <th>Idserveur</th>
                        <td>{{ serveur.idServeur }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ serveur.nom }}</td>
                    </tr>
                    <tr>
                        <th>Location</th>
                        <td>{{ serveur.location }}</td>
                    </tr>
                    <tr>
                        <th>Typejeu</th>
                        <td>{{ serveur.typeJeu }}</td>
                    </tr>
                    <tr>
                        <th>Rank</th>
                        <td>{{ serveur.rank }}</td>
                    </tr>
                    <tr>
                        <th>Ip</th>
                        <td>{{ serveur.ip }}</td>
                    </tr>
                </tbody>
             </table>
        </div>
    </div>
    <div class="col-lg-6">
        <h2>Actions</h2><br>
        <ul>
            <li>
                <a class="btn btn-default" href="{{ path('serveur_index') }}">Back to the list</a>
            </li><br>
            <li>
                <a class="btn btn-default" href="{{ path('serveur_edit', { 'idServeur': serveur.idServeur }) }}">Edit</a>

            </li><br>
            <li>
                {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-default">Delete</button>
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
</div>
{% endblock %}
