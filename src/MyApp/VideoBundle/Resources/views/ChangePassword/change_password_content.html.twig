{% trans_default_domain 'FOSUserBundle' %}
{% extends "MyAppVideoBundle:layout:layout.html.twig" %}
{% block title %} <title>Changer mot de passe</title>{% endblock %}
{% block store %}
    <link rel="stylesheet" href="{{ asset('css/store.css') }}">
{% endblock store %}
{% block neuf %}
    <div class="container">
        <div class="row">
            {%  include '@FOSUser/layout/col-left-co.html.twig' %}
            <div class="span9">
                <h2>Modifier mon mot de passe</h2>
                <div id="collapseOne" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <div class="span4">
                            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                            {{ form_widget(form) }}
                            <div>
                                <input class="btn btn-primary" type="submit" value="{{ 'change_password.submit'|trans }}" />
                            </div>
                            {{ form_end(form) }}
                            <br><br><br>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock neuf %}