{% extends 'MyAppPIBundle:layout:layout.html.twig' %}

{% block title %}
    <title>Actualite</title>
{% endblock %}

{% block  neuf %}
<div align="center" class="container">
    <div class="row">


    <h2 align="center">Actualite</h2>

    <table align="center" class="table table-striped table-hover">
        <thead>
        <th>Id</th>
        <th>Nom</th>
        <th>Dateheurecreation</th>
        <th>Type</th>
        <th>Description</th>
        </thead>
        <tbody>
        {% if entity|length == 0 %}
            <tr>
                <td colspan="4">Aucune actualite a afficher</td>
            </tr>
        {% endif %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.dateHeureCreation|date('Y-m-d') }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

        <table align="center" class="record_actions">
    <tr>
        <td>
        <a href="{{ path('admin_actualite') }}">
            Retour a la liste
        </a>
        </td>
            <td>
                <a></a>
            </td>
    <td>
        <a href= "{{ path('admin_actualite_edit', { 'id': entity.id }) }}">
            Modifier
        </a>
    </td>
            <td>
                <a></a>
            </td>
    <td>{{ form(delete_form) }}</td>
    </tr>
</table>
    </div>
</div>
{% endblock neuf %}
