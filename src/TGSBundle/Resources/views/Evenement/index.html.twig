{% extends 'MyAppPIBundle:layout:layout.html.twig' %}
{% block title %}
    <title>Evenement</title>
{% endblock %}
{% block  neuf %}
<div class="container">
    <div class="row">
    <h2 align="center">Evenement list</h2>

    <table align="center" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Lieu</th>
                <th>Nbpartcipant</th>
                <th>Nbpartcipantmax</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_evenement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.lieu }}</td>
                <td>{{ entity.nbpartcipant }}</td>
                <td>{{ entity.nbpartcipantmax }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_evenement_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_evenement_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <table align="center">
        <td>
            <a href="{{ path('admin_evenement_new') }}">
                Create a new entry
            </a>
        </td>
    </table>
    </div>
</div>
{% endblock neuf %}
