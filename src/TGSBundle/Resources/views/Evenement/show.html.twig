{% extends 'MyAppPIBundle:layout:layout.html.twig' %}

{% block  neuf %}
<div class="container">
    <div class="row">

    <h2 align="center">Evenement</h2>

    <table class="table table-striped table-hover">
        <thead>
        <th>Id</th>
        <th>Nom</th>
        <th>Description</th>
        <th>Lieu</th>
        <th>Nbpartcipant</th>
        <th>Nbpartcipantmax</th>
        <th>Date</th>
        </thead>
        <tbody>
        {% if entity|length == 0 %}
            <tr>
                <td colspan="4">Aucun Evenement a afficher</td>
            </tr>
        {% endif %}
            <tr>
                <form action="{{ path('admin_evenement_show', { 'id' : entity.id }) }}" method="get">
                <td>{{ entity.id }}</td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.lieu }}</td>
                <td>{{ entity.nbpartcipant }}</td>
                <td>{{ entity.nbpartcipantmax }}</td>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
                </form>
            </tr>
        </tbody>
    </table>

        <table align="center" class="record_actions">
    <tr>
        <td>
        <a href="{{ path('admin_evenement') }}"type="submit">
            Retour a la liste
        </a></td>
        <td>
        <a href="{{ path('admin_evenement_edit', { 'id': entity.id }) }}" >
            Modifier
        </a></td>
        <td>
   {{ form(delete_form) }}</td>
    </tr>
</table>
    </div>
</div>
{% endblock neuf %}
